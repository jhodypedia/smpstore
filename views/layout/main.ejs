<!doctype html>
<html lang="id" data-theme="dark">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title || process.env.STORE_NAME %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
  <link href="/public/css/style.css" rel="stylesheet">
</head>
<body class="bg-gradient">

<!-- Loading Overlay -->
<div id="loading" class="loading-overlay d-none"><div class="spinner-border" role="status"></div></div>

<nav class="navbar navbar-dark glass-nav px-3">
  <button class="btn btn-outline-light me-2 d-none d-md-inline" id="sidebarToggle"><i class="fa-solid fa-bars"></i></button>
  <a class="navbar-brand fw-bold" href="/"><i class="fa-solid fa-gamepad"></i> <%= process.env.STORE_NAME %></a>
  <div class="d-flex align-items-center gap-2">
    <button class="btn btn-outline-light btn-sm" id="themeToggle"><i class="fa-solid fa-moon"></i></button>
    <!-- Tidak tampilkan link admin di publik; admin akses manual /admin/login -->
  </div>
</nav>

<div class="app-wrap">
  <%- include('../partials/_sidebar'); %>
  <main class="container py-4">
    <%- body %>
  </main>
</div>

<footer class="text-center text-white-50 py-4">© <%= new Date().getFullYear() %> <%= process.env.STORE_NAME %> • by PansaGroup</footer>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="/public/js/app.js"></script>
</body>
</html>
